- form_for @post do |f|
  = f.error_messages

  %p
    %b Erstellt am:
    = I18n.l Time.now
  %p
    %b Zuletzt bearbeitet:
    = I18n.l Time.now
  %p
    %b Ort:
    %br/
    = f.text_field :location
  %p
    %b Titel:
    %br/
    = f.text_field :title, :size => 52
  %p
    %b Inhalt:
    = render :partial => '/shared/markdown_help'

    = f.text_area :body, :size => '60x20'
  %p
    = f.submit "Speichern"
    |
    = link_to "Abbrechen", :back
